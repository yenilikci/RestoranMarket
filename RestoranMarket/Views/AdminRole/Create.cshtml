@model string

@{
    Layout = "_AdminLayout";
}

<div class="bg-primary text-white p-1 m-1">
    <h2 class="p-2"><i class="zmdi zmdi-ticket-star"></i> Rol Oluştur</h2>
</div>

<form class="m-1 p-1" asp-action="Create" method="post">

    <div class="text-danger" asp-validation-summary="All"></div>

    <div class="form-group">
        <label form="name">
            Rol Adı
        </label>
        <input name="name" class="form-control" />
    </div>

    <input type="submit" class="btn btn-primary btn-lg" value="Kaydet" />
    <button asp-action="Index" class="btn btn-danger btn-lg">İptal</button>
</form>

