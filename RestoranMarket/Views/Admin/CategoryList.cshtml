@model IEnumerable<Category>

@{ 
    Layout = "_AdminLayout";
}


<div class="card">
    <div class="card-header">Kategoriler</div>
    <div class="card-body">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>KATEGORİ ID</th>
                    <th>KATEGORİ ADI</th>
                    <th style="width:100px;"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.CategoryId
                        </td>
                        <td>
                            @item.CategoryName
                        </td>
                        <td>
                            <a class="btn btn-primary btn-sm" asp-controller="Admin" asp-action="EditCategory" asp-route-id="@item.CategoryId">Düzenle</a>
                            <button class="btn btn-danger btn-sm">Sil</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>