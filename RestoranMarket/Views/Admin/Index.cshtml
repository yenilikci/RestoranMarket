@model IEnumerable<ApplicationUser> 

@{
    Layout = "_AdminLayout";
}



        <div class="bg-primary text-white p-1 m-1">
            <h2 class="p-2">Kullanıcı Listesi</h2>
        </div>

        <table class="table table-bordered table-sm table-striped m-1 p-1">
            <tr>
                <th>Kullanıcı Id</th>
                <th>Kullanıcı Adı</th>
                <th>Email</th>
            </tr>

            @if (Model.Count() == 0)
	        {
		        <tr>
                    <td colspan="3" class="text-center"> Kullanıcı Yok </td>
                </tr>
            }
            else
            {
                foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.UserName</td>
                        <td>@user.Email</td>
                    </tr>
                }
            }
        </table>

        <a asp-action="Create" class="btn btn-primary my-2 btn-lg">Kullanıcı Oluştur</a>

