@model Restaurant

@{
    Layout = "_AdminLayout";
}

<div class="bg-primary text-white p-1 m-1">
    <h2 class="p-2"><i class="zmdi zmdi-plus-circle-o"></i> Restoran Ekle</h2>
</div>

<form asp-controller="Admin" asp-action="AddRestaurant" method="post" enctype="multipart/form-data" class="mb-3">

    <div class="alert alert-danger" asp-validation-summary="All"></div>
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label>RESTORAN ADI</label>
        <input asp-for="RestaurantName" class="form-control" />
    </div>


    <div class="form-group">
        <label>RESTORAN RESMİ</label>
        <input type="file" name="file" id="file" class="form-control" />
    </div>

    <input type="submit" class="btn btn-success" value="Ekle" />

</form>