@model Category

@{
    Layout = "_AdminLayout";
}

<div class="bg-primary text-white p-1 m-1">
    <h2 class="p-2"><i class="zmdi zmdi-plus-circle-o"></i> Kategori Ekle</h2>
</div>


<form asp-controller="Admin" asp-action="AddCategory" method="post" class="mb-3">
    @Html.AntiForgeryToken()
    <div class="alert alert-danger" asp-validation-summary="All"></div>
        <div class="form-group">
            <label>KATEGORİ ADI GİRİNİZ</label>
            <input asp-for="CategoryName" class="form-control" />
        </div>
        <button type="submit" class="btn btn-success">Ekle</button>
</form>