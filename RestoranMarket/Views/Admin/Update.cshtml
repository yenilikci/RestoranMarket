@model ApplicationUser

@{
    Layout = "_AdminLayout";
}




<div class="bg-primary text-white p-1 m-1">
    <h2 class="p-2">Kullanıcı Güncelle</h2>
</div>

<form class="m-1 p-1" asp-action="Update" method="post">

    <div class="text-danger" asp-validation-summary="ModelOnly"></div>

    <div class="form-group">
        <label asp-for="Id">
            ID
        </label>
        <input asp-for="Id" class="form-control" disabled />
    </div>

    <div class="form-group">
        <label for="Password">
            PAROLA
        </label>
        <input name="Password" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Email">
            EMAİL
        </label>
        <input asp-for="Email" class="form-control" />
    </div>
    <input type="submit" class="btn btn-primary btn-lg" value="Kaydet" />
    <button asp-action="Index" class="btn btn-danger btn-lg">İptal</button>
</form>

