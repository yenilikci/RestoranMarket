<!doctype html>
<html class="no-js" lang="zxx">
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>@ViewData["Title"]</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" type="image/x-icon" href="~/app/assets/img/favicon.ico">

    <!-- CSS here -->
    <link rel="stylesheet" href="~/app/assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/app/assets/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/app/assets/css/slicknav.css">
    <link rel="stylesheet" href="~/app/assets/css/flaticon.css">
    <link rel="stylesheet" href="~/app/assets/css/progressbar_barfiller.css">
    <link rel="stylesheet" href="~/app/assets/css/gijgo.css">
    <link rel="stylesheet" href="~/app/assets/css/animate.min.css">
    <link rel="stylesheet" href="~/app/assets/css/animated-headline.css">
    <link rel="stylesheet" href="~/app/assets/css/magnific-popup.css">
    <link rel="stylesheet" href="~/app/assets/css/fontawesome-all.min.css">
    <link rel="stylesheet" href="~/app/assets/css/themify-icons.css">
    <link rel="stylesheet" href="~/app/assets/css/slick.css">
    <link rel="stylesheet" href="~/app/assets/css/nice-select.css">
    <link rel="stylesheet" href="~/app/assets/css/style.css">
</head>
<body>
    <!-- ? Preloader Start -->
    <div id="preloader-active">
        <div class="preloader d-flex align-items-center justify-content-center">
            <div class="preloader-inner position-relative">
                <div class="preloader-circle"></div>
                <div class="preloader-img pere-text">
                    <img src="~/app/assets/img/logo/restoranmarket.png" alt="">
                </div>
            </div>
        </div>
    </div>
    <!-- Preloader Start -->
    <header>
        <!-- Header Start -->
        <div class="header-area header-transparent">
            <div class="main-header header-sticky">
                <div class="container-fluid">
                    <div class="menu-wrapper d-flex align-items-center justify-content-between">
                        <!-- Logo -->
                        <div class="logo">
                            <div class="text-white" style="font-size: 24px;">
                                <a asp-controller="Home" asp-action="Index">Restoran Market</a>
                            </div>
                        </div>
                        <!-- Main-menu -->
                        <div class="main-menu f-right d-none d-lg-block">
                            <nav>
                                <ul id="navigation">
                                    <li><a asp-controller="Home" asp-action="Index">@SharedLocalizer["Anasayfa"]</a></li>
                                    <li><a href="/Home/Index#Kategoriler">@SharedLocalizer["Kategori"]</a></li>
                                    <li><a href="#Hakkinda">@SharedLocalizer["Hakkinda"]</a></li>
                                </ul>
                            </nav>
                        </div>                    
                        <!-- Header-btn -->
                        <div class="header-btns d-none d-lg-block f-right">
                            <a asp-controller="Account" asp-action="Login" class="btn"><i class="ti-user"></i>@SharedLocalizer["KayitGiris"]</a>
                        </div>
                        <!-- Mobile Menu -->
                        <div class="col-12">
                            <div class="mobile_menu d-block d-lg-none"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Header End -->
    </header>
    <main>

                @RenderBody()


    </main>


    <!-- Popular Locations End -->
    <!--? Want To work 01-->
    <section class="wantToWork-area pt-5" id="Hakkinda">
        <div class="container">
            <div class="wants-wrapper w-padding2">
                <div class="row align-items-center justify-content-between">
                    <div class="col-xl-7 col-lg-9 col-md-8">
                        <div class="wantToWork-caption wantToWork-caption2">
                            <h2>@SharedLocalizer["Hakkinda"]</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Want To work End -->
    <!--? Our Services Start -->
    <div class="our-services  border-bottom">
        <div class="container">
            <div class="row">
                <div class=" col-lg-4 col-md-6 col-sm-6">
                    <div class="single-services mb-30">
                        <div class="services-ion">
                            <span>01</span>
                        </div>
                        <div class="services-cap">
                            <h5>@SharedLocalizer["Ozellik1Baslik"]</h5>
                            <p>@SharedLocalizer["Ozellik1Aciklama"]</p>
                        </div>
                    </div>
                </div>
                <div class=" col-lg-4 col-md-6 col-sm-6">
                    <div class="single-services mb-30">
                        <div class="services-ion">
                            <span>02</span>
                        </div>
                        <div class="services-cap">
                            <h5>@SharedLocalizer["Ozellik2Baslik"]</h5>
                            <p>@SharedLocalizer["Ozellik2Aciklama"]</p>
                        </div>
                    </div>
                </div>
                <div class=" col-lg-4 col-md-6 col-sm-6">
                    <div class="single-services mb-30">
                        <div class="services-ion">
                            <span>03</span>
                        </div>
                        <div class="services-cap">
                            <h5>@SharedLocalizer["Ozellik3Baslik"]</h5>
                            <p>@SharedLocalizer["Ozellik3Aciklama"]</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



    <footer>
        <div class="footer-wrapper pt-30">
            <!-- footer-bottom -->
            <div class="footer-bottom-area">
                <div class="container">
                    <div class="footer-border">
                        <div class="row d-flex justify-content-between align-items-center">
                            <div class="col-xl-10 col-lg-9 ">
                                <div class="footer-copy-right">
                                    <p>&copy 2020 Web Programlama Ödevi</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <!-- Scroll Up -->
    <div id="back-top">
        <a title="Go to Top" href="#"> <i class="fas fa-level-up-alt"></i></a>
    </div>

    <!-- JS here -->
    <!-- Jquery, Popper, Bootstrap -->
    <script src="~/app/assets/js/vendor/jquery-1.12.4.min.js"></script>
    <script src="~/app/assets/js/popper.min.js"></script>
    <script src="~/app/assets/js/bootstrap.min.js"></script>
    <!-- Jquery Mobile Menu -->
    <script src="~/app/assets/js/jquery.slicknav.min.js"></script>

    <!-- Jquery Slick , Owl-Carousel Plugins -->
    <script src="~/app/assets/js/owl.carousel.min.js"></script>
    <script src="~/app/assets/js/slick.min.js"></script>
    <!-- One Page, Animated-HeadLin -->
    <script src="~/app/assets/js/wow.min.js"></script>
    <script src="~/app/assets/js/animated.headline.js"></script>
    <script src="~/app/assets/js/jquery.magnific-popup.js"></script>

    <!-- Date Picker -->
    <script src="~/app/assets/js/gijgo.min.js"></script>
    <!-- Nice-select, sticky -->
    <script src="~/app/assets/js/jquery.nice-select.min.js"></script>
    <script src="~/app/assets/js/jquery.sticky.js"></script>
    <!-- Progress -->
    <script src="~/app/assets/js/jquery.barfiller.js"></script>

    <!-- counter , waypoint,Hover Direction -->
    <script src="~/app/assets/js/jquery.counterup.min.js"></script>
    <script src="~/app/assets/js/waypoints.min.js"></script>
    <script src="~/app/assets/js/jquery.countdown.min.js"></script>
    <script src="~/app/assets/js/hover-direction-snake.min.js"></script>

    <!-- contact js -->
    <script src="~/app/assets/js/contact.js"></script>
    <script src="~/app/assets/js/jquery.form.js"></script>
    <script src="~/app/assets/js/jquery.validate.min.js"></script>
    <script src="~/app/assets/js/mail-script.js"></script>
    <script src="~/app/assets/js/jquery.ajaxchimp.min.js"></script>

    <!-- Jquery Plugins, main Jquery -->
    <script src="~/app/assets/js/plugins.js"></script>
    <script src="~/app/assets/js/main.js"></script>



</body>
</html>