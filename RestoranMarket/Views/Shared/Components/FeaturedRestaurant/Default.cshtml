@model IEnumerable<Restaurant>

    <div class="popular-directorya-area  border-bottom section-padding40 fix">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <!-- Section Tittle -->
                    <div class="section-tittle text-center mb-80">
                        <h2>Öne Çıkan Restoranlar</h2>
                    </div>
                </div>
            </div>
            <div class="directory-active">


                @foreach (var restaurant in Model)
                {
                    <!-- Single -->
                    <div class="properties pb-20">
                        <div class="properties__card">
                            <div class="properties__img overlay1">
                                <a href="#"><img src="~/app/thumb/@restaurant.Image" alt=""></a>
                                <div class="icon">
                                    <img src="~/app/assets/img/gallery/categori_icon1.png" alt="">
                                </div>
                            </div>
                            <div class="properties__caption">
                                <h3><a href="#">@restaurant.RestaurantName</a></h3>
                                <p>Let's uncover the best places to eat, drink</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>