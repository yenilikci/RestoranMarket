@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@model RegisterModel

@{
    Layout = "_Layout";
}

<div class="slider-area hero-bg3 hero-overly">
    <div class="single-slider slider-height2 d-flex align-items-end">
        <div class="container">
            <div class="directory-details-head">
                <section class="wantToWork-area">
                    <div class="wants-wrapper w-padding3">
                        <div class="row align-items-center justify-content-between">
                            <div class="col-xl-8">
                                <div class="details-cap d-flex">
                                    <div class="properties__caption">

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
</div>


<section class="contact-section">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h1 class="contact-title text-center">@localizer["KayitOl"]</h1>
            </div>
            <div class="col-lg-3"></div>
            <div class="col-lg-6">
                <hr />
                <div class="text-danger" asp-validation-summary="All"></div>


                <form asp-action="Register" method="post">
                    <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" />
                    <div class="form-group">
                        <label>@localizer["EmailAdresi"]</label>
                        <input class="single-input-primary p-3" asp-for="Email" placeholder="@localizer["EmailAdresiniz"]">
                    </div>
                    <div class="form-group">
                        <label>@localizer["KullaniciAdi"]</label>
                        <input class="single-input-primary p-3" asp-for="UserName" placeholder="@localizer["KullaniciBelirle"]">
                    </div>
                    <div class="form-group">
                        <label>@localizer["Sifre"]</label>
                        <input class="single-input-primary p-3" asp-for="Password" placeholder="@localizer["SifreBelirle"]">
                    </div>
                    <input type="submit" class="btn btn-primary" value="@localizer["Gonder"]"></input>
                    <button asp-action="Index" asp-controller="Home" class="btn btn-danger btn-lg">@localizer["Iptal"]</button>

                </form>
            </div>
            <div class="col-lg-3"></div>
        </div>
    </div>
</section>

